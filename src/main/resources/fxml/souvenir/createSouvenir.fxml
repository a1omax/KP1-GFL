<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane prefHeight="284.0" prefWidth="262.0" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gfl.kp1.controllers.souvenir.CreateSouvenirController">
    <children>
        <Label alignment="CENTER" prefHeight="25.0" prefWidth="242.0" style="-fx-background-color: white;" text="Create souvenir" />
        <Label prefHeight="17.0" prefWidth="50.0" text="Name: " />
        <TextField fx:id="nameTextField" prefHeight="25.0" prefWidth="183.0" />
        <Label prefHeight="17.0" prefWidth="49.0" text="Details: " />
        <TextField fx:id="detailsTextField" prefHeight="67.0" prefWidth="183.0" />
        <Label prefHeight="17.0" prefWidth="49.0" text="Date: " />
        <DatePicker fx:id="dateDatePicker" prefHeight="25.0" prefWidth="183.0" />
        <Label prefHeight="17.0" prefWidth="49.0" text="Price: " />
        <TextField fx:id="priceTextField" prefHeight="25.0" prefWidth="183.0" />
        <Label prefHeight="17.0" prefWidth="86.0" text="Manufacturer: " />
        <ComboBox fx:id="manufacturerComboBox" onShowing="#getManufacturers" prefWidth="150.0" />
        <Label prefHeight="17.0" prefWidth="86.0" text="Souvenir type: " />
        <ComboBox fx:id="souvenirTypeComboBox" onShowing="#getSouvenirTypes" prefWidth="150.0" />
        <Button mnemonicParsing="false" onAction="#onClickCreateButton" prefHeight="52.0" prefWidth="239.0" text="Create" />
    </children>
</FlowPane>
